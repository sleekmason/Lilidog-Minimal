#!/bin/bash
echo ""
echo ""
echo ""
read -p "   Libreoffice Installer

   This will install the full Libreoffice Suite with
   gtk support and other sensible extras. Hunspell will
   default to US EN  (US english). Other languages available.
   
   ---------------------------------------------------------
   
   Please press enter to install the Libreoffice Suite.
   
   ---------------------------------------------------------
   
   
   Or close this terminal window to quit the install." ;
echo "" 
sudo apt update && sudo apt install libreoffice libreoffice-gtk3 \
hunspell-en-us hyphen-en-us cups-bsd libsane libxrender1 libgl1 libpaper-utils \
fonts-dejavu fonts-liberation2 fonts-linuxlibertine fonts-noto-core fonts-noto-extra &&
sed -i '/Libreoffice,         libreoffice,       libreoffice-writer/d' ~/.config/jgmenu/mymenu.csv &&
sed -i '19 a Libreoffice,         libreoffice,       libreoffice-writer' ~/.config/jgmenu/mymenu.csv
killall jgmenu
echo ""
echo "-----------------------------------------------------"
echo ""
echo "All Finished!"
echo ""
echo "If installed, You should find a new menu entry under 'Quick Grab'"
echo "labeled 'Libreoffice'"
echo "" 
echo "Menu entries will need to be removed manually if uninstalled." 
echo "See Jgmenu Conf under Configuration in the menu for directions."
echo ""
echo "-----------------------------------------------------"
