#!/bin/bash
echo ""
echo ""
echo ""
read -p "   Qemu Installer

   Qemu is a virtual machine for linux. This will install
   Qemu with --recommends enabled, and gives a few commands
   to use after installation.

   https://qemu-project.gitlab.io/qemu/
   
    
   
   ---------------------------------------------------------
   
   Please press enter to install qemu.
   
   ---------------------------------------------------------
   
   
   Or close this terminal window to quit the install." ;
sudo apt update && sudo apt install --install-recommends qemu-system-x86
echo ""
echo "-----------------------------------------------------"
echo ""
echo "All Finished!"
echo "" 
echo "For quick use, open a terminal where you have an ISO and:"
echo "kvm -cdrom <Your-Coolamd64.hybrid.iso> -m 2048"
echo "Where -m is the amount of dedicated memory to the VM"
echo ""
echo "Enjoy!"
echo "-----------------------------------------------------"
